<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets ?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ListView?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="view.ProgramExecutionController"
          prefHeight="400.0" prefWidth="600.0"
          alignment="CENTER">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>


    <children>
        <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" >
              <children>
                  <Text text="Active Program States:"/>
                  <TextField fx:id="numberOfActiveProgramStatesTextField"/>
              </children>
        </HBox>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Button fx:id="oneStepButton" onAction="#handleOneStepButtonAction" text="_1 Step"/>
            <Button fx:id="allStepButton" onAction="#handleAllStepButtonAction" text="_All Step"/>
        </VBox>
        <TableView fx:id="symbolTableTableView" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TableView fx:id="heapTableTableView" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TableView fx:id="fileTableTableView" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <HBox GridPane.columnIndex="0" GridPane.rowIndex="2"
              GridPane.columnSpan="3" GridPane.rowSpan="1">
            <ListView fx:id="executionStackListView"/>
            <ListView fx:id="outListListView"/>
        </HBox>
        <ListView fx:id="programStateIDsListView" GridPane.columnIndex="4" GridPane.rowIndex="0" GridPane.columnSpan="1" GridPane.rowSpan="3"/>
    </children>

</GridPane>


